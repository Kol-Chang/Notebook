execute pathogen#infect()

syntax on

colorscheme desert

set shiftwidth=4
set tabstop=4
set showmatch
set number
set ruler
set laststatus=2
set mouse=a

set foldcolumn=3
set foldenable
set foldmethod=manual

set complete=.,w,b,u,U,i,d

set cindent

au BufNewFile,BufRead *.cu set filetype=cuda
au BufNewFile,BufRead *.cuh set filetype=cuda

set list
set listchars+=eol:·
set listchars+=tab:>-
"set listchars+=space:·

autocmd vimenter * NERDTree | wincmd p

filetype plugin on
set shellslash
let g:tex_flavor='latex'

